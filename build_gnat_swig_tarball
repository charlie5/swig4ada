## Builds a tarball for binary install of Swig gnat version to /user/local.
#


#!/usr/bin/bash

set -e

mkdir -p ./usr/local/bin ./usr/local/include ./usr/local/share/swig/1.3.36/gnat


# Copy build to install location.
#
cp ./gnat/swig_gnat ./usr/local/bin


cp ./swig.ads                    ./usr/local/include
cp ./swig-pointers.ads           ./usr/local/include
cp ./interfaces_cpp_pointers.ads ./usr/local/include
cp ./interfaces_cpp_pointers.adb ./usr/local/include


#mkdir -p /usr/local/share/swig/1.3.36/gnat
cp ./Lib/gnat/* ./usr/local/share/swig/1.3.36/gnat/
cp -fr ./Lib/*  ./usr/local/share/swig/1.3.36 
